{
    "name": "node-lambda-otel-layer",
    "version": "1.0.0",
    "description": "OTEL Lambda Layer for NodeJS",
    "scripts": {
        "clean": "rimraf build/*",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts",
        "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts --fix",
        "build": "rm -rf build && esbuild src/wrapper.ts --bundle --outdir=build --tsconfig=tsconfig.json --platform=node --external:'@aws-sdk/*' && cp scripts/otel-handler build/ && cd build && bestzip ./node-lambda-otel-layer.zip *",
        "test": "jest --coverage",
        "compile": "tsc -p ."
    },
    "keywords": [
        "opentelemetry",
        "lambda",
        "layer",
        "nodejs"
    ],
    "author": "Arun Gopallpuri",
    "license": "Apache-2.0",
    "dependencies": {
        "@opentelemetry/api": "^1.8.0",
        "@opentelemetry/exporter-trace-otlp-grpc": "^0.51.0",
        "@opentelemetry/instrumentation-aws-lambda": "^0.41.0",
        "@opentelemetry/instrumentation-aws-sdk": "^0.41.0",
        "@opentelemetry/resource-detector-aws": "^1.4.2",
        "@opentelemetry/sdk-node": "^0.51.0",
        "@opentelemetry/sdk-trace-base": "^1.24.0",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "bestzip": "2.2.1",
        "copyfiles": "2.4.1",
        "esbuild": "^0.20.2",
        "gts": "5.3.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.4.5"
    }
}
